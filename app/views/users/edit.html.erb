<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class='field'>
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>
  <div class='field'>
    <%= f.label :email %> <br />
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :password %> <br />
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation, "Confirmation" %> <br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class='actions'>
    <%= f.submit "Update" %>
  </div>
  <div>
    <%= gravatar_for @user %>
    <%= link_to "change", "http://en.gravatar.com/emails" %>
  </div>
<% end %>

