<% if size == 50
      @size = :thumb
    elsif size==30
      @size = :small
    else
      @size = :medium
    end %>
<% if user.avatar.present? %>
  <%= link_to(image_tag(user.avatar.url(@size)), user_path(user)) %>
<% else %>
  <%= link_to(gravatar_for(user, :size => size), user_path(user)) %>
<% end %>
