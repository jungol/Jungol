<div class="content-bg">
  <div id="doc-share" class="main-right full">
    <div class="alt-item-head headerfull">
      <h2>Share <%= @document.title %> with:</h2>
    </div>

    <% if (@unshared.present? && current_user.member_of?(@group)) %>
      <ul class="share-list">
        <% @unshared.each do |group| %>
          <%= render 'share_form', :group => group %>
        <% end %>
      </ul>
    <% else %>
      <p><%= "#{@document.title} has been shared with all connected groups." %></p>
    <% end %>
    <div class="clearall"></div>
  </div>
</div>
