<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email,
    :class => "email",
    :placeholder => "name@emailaddress.com" %>
  <%= f.password_field :password,
    :class => "password",
    :placeholder => "***********" %>
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, :id => "rem" %><%= f.label :remember_me %>
  <% end -%>
  <%= f.submit "Sign in", :class => "login-submit", :id => "login-submit" %>
<% end %>
