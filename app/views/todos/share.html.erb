<div class="content-bg">
  <div id="disc-share" class="main-right full">
    <div class="item-head headerfull">
      <h2>Share <%= @todo.title %></h2>
    </div>

    <% if(@unshared.present? && current_user.member_of?(@group)) %>
      <ul class="share-list">
        <li>Share Item With:</li>
        <% @unshared.each do |group| %>
          <%= render 'groups', :group => group %>
        <% end %>
      </ul>
    <% end %>
    <div class="clearall"></div>
  </div>
