<div class="content-bg">
  <div id="wrapper">

    <div class="main-right full">
      <div id='group-connect' class="item">
        <div class="item-head headerfull">
          <h2><%= @group.name %></h2><span class="create-button button"><!-- <a href="#">Edit User Â»</a></span> -->
        </div>

        <h2 class="group-select">Select a group to connect with <%= @group.name %>:</h2>

        <%= form_tag(link_path(@group), :method => :post) do %>
          <div class="actions">
            <%= collection_select(:group, :id, @groups, :id, :name, :prompt => true) %>
            <%= submit_tag "Connect with #{@group.name}" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="clearall"></div>
  </div>
</div>
