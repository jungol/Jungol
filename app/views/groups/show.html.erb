<%= link_to("Join Group", join_path(@group),
            :method => :post,
            :class => 'join_button round',
            :id => 'join_button') unless @member %>

<%#= button_to "Join Group", {:action => "join", :id => @group.id}, :class => "join_button round"%>
<div class='group_profile'>
  <h1>
    <%= @group.name %>
  </h1>

  <strong>Name</strong> <%= @group.name %><br />
  <strong>About</strong> <%= @group.about %><br />

  Creator: <%= @group.creator.name %><br />
  <strong>URL</strong> <%= link_to group_path(@group), @group %><br /><br />

  <strong>Leaders</strong> <%= render @group.leaders %><br />
  <strong>Users</strong> <%= render @group.non_leaders %><br /><br />

  <strong>Connected Groups</strong> <%= render @group.groups %><br />


  <strong>Todo Lists</strong> <%= render @group.todos %><br />

  <% if @leader %>
    <%= "You're a leader! Connect!" %><br />
    <%= link_to("Connect to Groups", link_path(@group), :class => 'round') %>
  <% end %>

</div>
