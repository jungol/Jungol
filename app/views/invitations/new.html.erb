<div class="content-bg">
  <div id="new-invite" class="main-right full">
    <div class="alt-item-head headerfull">
      <h2>Invite New User</h2>
    </div>

    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name) do |f| %>
      <%= devise_error_messages! %>

      <p><%= f.label :email, "What's their email address? We'll send an invite" %><br />
        <%= f.text_field :email %></p>

      <p class="sign-in-button"><%= f.submit "Send an invitation" %></p>
    <% end %>

    <div class="clearall"></div>
  </div>
</div>
